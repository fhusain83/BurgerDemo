  <Body>
<div class="jumbotron text-center">
<h1>Eat The Burger</h1>
</div>

        
<div class="container">
<div class="row">
<input type="text" id="NewBurger" style="width:300px;" class="form-control"  placeholder="Add Burger" >
<button id="add-item" input="submit" class="btn btn-default">
Add Burger
</button>  
</div>


<div class="row">
<div class="col-lg-6">
<h2>Burgers</h2>

<ul id="Undevoured">
  {{#each Burgers}}
    {{#unless devour}}
      {{> Burger/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

</div>
<div class="col-lg-6">
<h2>Devoured</h2>

<ul id="Devoured">
  {{#each Burgers}}
    {{#if devour}}
      {{> Burger/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

</div>
</div>
</div>


